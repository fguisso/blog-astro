---

<footer class="site-footer">
	<div class="page-shell footer-grid">
		<div class="footer-brand">
			<LogoWordmark />
			<p>{t(locale, 'footer.description')}</p>
			<GlowButton href={rssHref} variant="ghost" size="sm">
				{t(locale, 'footer.rssCta')}
			</GlowButton>
		</div>

		<div>
			<p class="eyebrow">{t(locale, 'footer.navLabel')}</p>
			<ul class="footer-links">
				{navLinks.map((link) => (
					<li>
						<a href={link.href}>{link.label}</a>
					</li>
				))}
			</ul>
		</div>

		<div>
			<p class="eyebrow">{t(locale, 'footer.connectLabel')}</p>
			<div class="social-links">
				{socials.map((social) => (
					<a
						href={social.href}
						target="_blank"
						rel="noreferrer me"
						data-platform={social.label.toLowerCase()}
					>
						<span class="sr-only">{social.label}</span>
						<svg viewBox={social.viewBox} aria-hidden="true" width="28" height="28">
							<path fill="currentColor" d={social.path}></path>
						</svg>
					</a>
				))}
			</div>
		</div>
	</div>
	<div class="footer-bottom">
		<div class="page-shell">
			<p>&copy; {today.getFullYear()} - {t(locale, 'footer.rights')}</p>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		margin-top: 4rem;
		padding: 4rem 0 2rem;
		background: rgba(3, 3, 6, 0.95);
		position: relative;
		overflow: hidden;
	}

	.site-footer::before {
		content: '';
		position: absolute;
		inset: -10% -20%;
		background:
			radial-gradient(circle at 15% 15%, rgba(110, 110, 255, 0.25), transparent 55%),
			radial-gradient(circle at 85% 25%, rgba(154, 26, 255, 0.22), transparent 50%),
			radial-gradient(circle at 35% 80%, rgba(0, 255, 127, 0.18), transparent 45%);
		filter: blur(90px);
		opacity: 0.85;
	}

	.footer-grid {
		position: relative;
		z-index: 1;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 2.5rem;
	}

	.footer-brand :global(svg) {
		color: var(--color-fg);
		margin-bottom: 0.5rem;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 0.5rem;
	}

	.footer-links a {
		color: var(--color-muted);
		font-weight: 500;
	}

	.footer-links a:hover {
		color: var(--color-accent);
	}

	.social-links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;
	}

	.social-links a {
		position: relative;
		isolation: isolate;
		width: 60px;
		height: 60px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 16px;
		background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.01));
		box-shadow:
			0 18px 35px rgba(0, 0, 0, 0.35),
			0 0 0 1px rgba(255, 255, 255, 0.03) inset;
		color: var(--color-muted-strong);
		overflow: hidden;
		transition:
			border-color 0.25s ease,
			transform 0.25s ease,
			color 0.2s ease;
	}

	.social-links a::before {
		content: '';
		position: absolute;
		inset: -40%;
		background: conic-gradient(
			from 120deg,
			rgba(0, 255, 127, 0.38),
			rgba(154, 26, 255, 0.32),
			rgba(110, 110, 255, 0.36),
			rgba(0, 255, 127, 0.4)
		);
		filter: blur(26px);
		opacity: 0;
		z-index: 0;
		transition: opacity 0.3s ease;
	}

	.social-links a::after {
		content: '';
		position: absolute;
		inset: 1px;
		border-radius: 14px;
		background: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.08), transparent 55%);
		z-index: 0;
		opacity: 0.9;
	}

	.social-links svg {
		position: relative;
		z-index: 1;
		width: 26px;
		height: 26px;
	}

	.social-links a:hover {
		border-color: rgba(0, 255, 127, 0.78);
		color: var(--color-fg);
		transform: translateY(-4px) scale(1.02);
	}

	.social-links a:hover::before {
		opacity: 1;
	}

	@media (max-width: 600px) {
		.social-links a {
			width: 52px;
			height: 52px;
		}
	}

	.footer-bottom {
		margin-top: 3rem;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		padding-top: 1.5rem;
		position: relative;
		z-index: 1;
		text-align: center;
		color: var(--color-muted);
	}
</style>
