---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import { getSiteMeta } from '../theme.config';
import { DEFAULT_LOCALE, getRequestLocale, type LocaleCode } from '../i18n/config';
import { routes } from '../utils/routes';
import { withBase } from '../utils/paths';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata | string;
	locale?: LocaleCode;
}

const { title, description, image, locale: forcedLocale } = Astro.props as Props;
const locale = forcedLocale ?? getRequestLocale(Astro) ?? DEFAULT_LOCALE;
const siteMeta = getSiteMeta(locale);
const defaultOgImage = '/og/blog-default.png';
const urlBase = Astro.site ?? Astro.url;
const canonicalURL = Astro.site ? new URL(withBase(Astro.url.pathname), Astro.site) : Astro.url;
const rssURL = new URL(routes.rss(locale), urlBase);
const sitemapURL = new URL(withBase('/sitemap-index.xml'), urlBase);
const faviconURL = new URL(withBase('/favicon.svg'), urlBase);
const resolvedImageSrc = typeof image === 'string' ? image : image?.src ?? defaultOgImage;
const socialImageURL = new URL(withBase(resolvedImageSrc), urlBase);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={faviconURL} />
<link rel="sitemap" href={sitemapURL} />
<link
	rel="alternate"
	type="application/rss+xml"
	title={siteMeta.title}
	href={rssURL}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preconnects for the style guide -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />
