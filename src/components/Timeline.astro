---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'ul'> {}

const { class: className, ...rest } = Astro.props as Props;
const classes = ['timeline', className];
---

<ul class:list={classes} {...rest}>
	<slot />
</ul>

<style>
	.timeline {
		list-style: none;
		margin: 0;
		padding: 0;
		position: relative;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.timeline::before {
		content: '';
		position: absolute;
		top: 0.75rem;
		bottom: 0.5rem;
		width: 2px;
		left: 0.75rem;
		background: linear-gradient(180deg, rgba(0, 255, 127, 0.6), rgba(154, 26, 255, 0.6));
		opacity: 0.65;
	}

	@media (max-width: 640px) {
		.timeline {
			gap: 1.5rem;
		}

		.timeline::before {
			left: 0.6rem;
		}
	}
</style>
