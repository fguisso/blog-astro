---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'li'> {
	accent?: 'accent' | 'secondary' | 'highlight';
}

const { class: className, accent = 'accent', ...rest } = Astro.props as Props;
const classes = ['timeline-item', `timeline-item--${accent}`, className];
---

<li class:list={classes} {...rest}>
	<div class="timeline-node" aria-hidden="true"></div>
	<div class="timeline-content">
		<slot />
	</div>
</li>

<style>
	.timeline-item {
		position: relative;
		padding-left: 3rem;
	}

	.timeline-node {
		position: absolute;
		width: 1.25rem;
		height: 1.25rem;
		border-radius: 50%;
		left: 0;
		top: 0.2rem;
		box-shadow: 0 0 20px rgba(0, 0, 0, 0.45);
		background: radial-gradient(circle, rgba(0, 255, 127, 1) 30%, rgba(0, 255, 127, 0.1));
		border: 2px solid rgba(0, 0, 0, 0.5);
	}

	.timeline-item--secondary .timeline-node {
		background: radial-gradient(circle, rgba(154, 26, 255, 1) 25%, rgba(154, 26, 255, 0.15));
	}

	.timeline-item--highlight .timeline-node {
		background: radial-gradient(circle, rgba(110, 110, 255, 1) 25%, rgba(110, 110, 255, 0.15));
	}

	.timeline-content {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	@media (max-width: 640px) {
		.timeline-item {
			padding-left: 2.4rem;
		}

		.timeline-node {
			width: 1rem;
			height: 1rem;
			top: 0.35rem;
		}
	}
</style>
