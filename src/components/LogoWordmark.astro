---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'svg'>;

const { class: className, ...rest } = Astro.props as Props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 849.6 329.92"
	class:list={['logo-wordmark', className]}
	role="img"
	aria-label="Guisso logotipo"
	{...rest}
>
	<title>guisso</title>
	<text transform="translate(5.52 250.66)" fill="currentColor">guisso</text>
	<polygon points="60.34 198.02 84.8 150.91 107.45 198.02 60.34 198.02" fill="currentColor" />
	<polygon points="741.17 161.02 765.63 208.13 788.28 161.02 741.17 161.02" fill="currentColor" />
</svg>

<style>
	.logo-wordmark {
		display: block;
		width: 180px;
		color: inherit;
	}

	.logo-wordmark text {
		font-size: 296.85px;
		font-family: 'Didact Gothic', 'Oferta do Dia', 'Inter', sans-serif;
	}

	@media (max-width: 640px) {
		.logo-wordmark {
			width: 150px;
		}
	}
</style>
