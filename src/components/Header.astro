---
import GlowButton from './GlowButton.astro';
import HeaderLink from './HeaderLink.astro';
import LogoWordmark from './LogoWordmark.astro';
---

<header class="site-header">
	<div class="page-shell">
		<div class="nav-bar">
			<a href="/" aria-label="Ir para a página inicial" class="logo-link">
				<LogoWordmark />
			</a>
			<nav class="nav-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</nav>
			<div class="nav-cta">
				<GlowButton href="/blog" variant="accent" size="sm">Começar a ler</GlowButton>
			</div>
		</div>
	</div>
</header>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 10;
		backdrop-filter: blur(16px);
		background: rgba(5, 5, 8, 0.85);
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
		box-shadow: 0 12px 30px rgba(0, 0, 0, 0.45);
	}

	.nav-bar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1.25rem 0;
		gap: 2rem;
	}

	.logo-link {
		display: flex;
		align-items: center;
		color: var(--color-fg);
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.nav-cta {
		display: flex;
		align-items: center;
	}

	@media (max-width: 820px) {
		.nav-bar {
			flex-direction: column;
			align-items: flex-start;
		}
		.nav-links {
			flex-wrap: wrap;
			gap: 1rem 1.5rem;
		}
		.nav-cta {
			width: 100%;
		}
		.nav-cta :global(.btn) {
			width: 100%;
			justify-content: center;
		}
	}
</style>
