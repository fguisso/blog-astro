---
import type { HTMLAttributes } from 'astro/types';
import { withBase, withoutBase } from '../utils/paths';

type Props = HTMLAttributes<'a'>;

const { href = '/', class: className, ...props } = Astro.props;
const resolvedHref = withBase(href);
const pathname = withoutBase(Astro.url.pathname);
const normalizedPath = pathname.startsWith('/') ? pathname : `/${pathname}`;
const subpath = normalizedPath.match(/[^\/]+/g);
const normalizedHref = withoutBase(href);
const isActive =
	normalizedHref === normalizedPath || normalizedHref === '/' + (subpath?.[0] || '');
---

<a href={resolvedHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		position: relative;
		display: inline-flex;
		align-items: center;
		gap: 0.4rem;
		padding: 0.25rem 0;
		text-decoration: none;
		font-size: 0.8rem;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		color: var(--color-muted);
		transition: color 0.2s ease;
	}
	a::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: -0.35rem;
		height: 2px;
		width: 0;
		background: linear-gradient(90deg, var(--color-accent), var(--color-secondary));
		transition: width 0.2s ease;
	}
	a:hover {
		color: var(--color-fg);
	}
	a.active {
		color: var(--color-accent);
	}
	a.active::after {
		width: 100%;
	}
</style>
