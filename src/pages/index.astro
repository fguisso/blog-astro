---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import GlowButton from '../components/GlowButton.astro';
import HeroCanvas from '../components/HeroCanvas.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import FeaturedProjectCard from '../components/FeaturedProjectCard.astro';
import PostCard from '../components/PostCard.astro';
import { t } from '../i18n';
import { getHtmlLang, getRequestLocale } from '../i18n/config';
import { getSiteMeta, themeConfig } from '../theme.config';
import { routes } from '../utils/routes';

const locale = getRequestLocale(Astro);
const htmlLang = getHtmlLang(locale);
const currentPath = Astro.url?.pathname ?? '/';
const currentSearch = Astro.url?.search ?? '';
const posts = (await getCollection('blog'))
	.filter((post) => post.data.lang === locale)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const slugFor = (post: CollectionEntry<'blog'>) => post.data.canonicalSlug ?? post.slug;

const tagPalette = ['Creative', 'Idea', 'Lifestyle', 'Review'];
const tagLookup = new Map(
	posts.map((post, index) => [slugFor(post), tagPalette[index % tagPalette.length]]),
);

const wordsPerMinute = 200;
const numberFormatter = new Intl.NumberFormat(htmlLang);
const wordsLabel = t(locale, 'common.wordsLabel');
const minutesLabel = t(locale, 'common.minutesLabel');
const postStats = new Map(
	posts.map((post) => {
		const body = post.body ?? '';
		const words = body ? body.trim().split(/\s+/).filter(Boolean).length : 0;
		const minutes = Math.max(1, Math.round(words / wordsPerMinute));
		return [
			slugFor(post),
			{
				words,
				minutes,
				label: words
					? `${numberFormatter.format(words)} ${wordsLabel} · ${minutes} ${minutesLabel}`
					: null,
			},
		];
	}),
);

const latestInitial = posts.slice(0, 3);
const hasAdditionalPosts = posts.length > latestInitial.length;

const site = getSiteMeta(locale);
const { featuredProjects } = themeConfig;
const homeLabTagHref = routes.blogTagFilter('home-lab', locale);
const projectsHref = routes.projects(locale);
const blogHref = routes.blog(locale);
---

<!doctype html>
<html lang={htmlLang}>
		<head>
			<BaseHead title={site.title} description={site.description} locale={locale} />
	</head>
	<body>
		<Header locale={locale} pathname={currentPath} search={currentSearch} />
		<main class="page-shell home-shell">
			<section class="hero">
				<div class="hero__content">
					<p class="eyebrow hero__eyebrow">Sobre</p>
					<h1 class="hero__heading">
						Oi, eu sou o <span class="display-special primary">Fernando Guisso</span>.
					</h1>
					<p class="hero__line">
						Sou Security Software Engineer no willbank, onde lidero a área de AppSec e a plataforma interna de autenticação.
					</p>
					<p class="hero__line">
						Crio soluções que tornam a segurança parte natural do desenvolvimento, ajudando engenheiros a
						construir produtos seguros sem perder velocidade —
						<span class="hero__line--alt">porque segurança boa é aquela que vem junto com o código.</span>
					</p>
					<p class="hero__line">
						Quando sobra energia, perco horas afinando meu <strong>home lab</strong>: você encontra algumas histórias
						com a tag <a href={homeLabTagHref}>home-lab</a> ou mergulha nos detalhes técnicos dentro da{' '}
						<a href="https://wiki.guisso.dev/linux/homelab" target="_blank" rel="noopener noreferrer">minha wiki</a>.
					</p>
					<div class="hero__cta">
						<GlowButton href="#latest" variant="accent" size="lg">Ver posts</GlowButton>
						<GlowButton href={blogHref} variant="ghost" size="lg">Arquivo completo</GlowButton>
					</div>
				</div>
				<HeroCanvas />
			</section>

			{featuredProjects.length > 0 && (
				<section class="featured-projects">
					<div class="featured-projects__head">
						<div class="featured-projects__head-text">
							<p class="eyebrow">projetos principais</p>
              <h1 class="featured-projects__title"><span class="display-special primary">Projetos</span> em que estou trabalhando agora</h2>
						</div>
						<GlowButton href={projectsHref} variant="ghost" size="sm">Ver projetos</GlowButton>
					</div>
						<ul class="featured-projects__grid">
							{featuredProjects.map((project) => (
							<FeaturedProjectCard project={project} />
						))}
					</ul>
				</section>
			)}

				<section id="latest" class="latest">
					<div class="section-head section-head--split">
						<div>
							<p class="eyebrow">novos artigos</p>
							<h2>
                Veja o que eu <em><span class="display-special primary">ando escrevendo</span></em>
							</h2>
						</div>
					</div>
					<ul id="latest-grid" class="featured-projects__grid featured-projects__grid--posts">
						{latestInitial.map((post) => {
					const stats = postStats.get(slugFor(post));
							return (
								<PostCard
								href={routes.blogPost(slugFor(post), locale)}
									title={post.data.title}
									description={post.data.description}
									statsLabel={stats?.label}
								tag={tagLookup.get(slugFor(post))}
									image={post.data.heroImage?.src}
								>
									<FormattedDate slot="label" date={post.data.pubDate} locale={htmlLang} />
								</PostCard>
							);
						})}
					</ul>
					{hasAdditionalPosts && (
						<div class="center">
							<GlowButton href={blogHref} variant="accent" size="sm">Veja mais</GlowButton>
						</div>
					)}
			</section>

		</main>
		<Footer locale={locale} />
	</body>
</html>

<style>
	.home-shell {
		padding-top: 4rem;
		padding-bottom: 5rem;
	}

	.hero {
		margin-bottom: 4rem;
		padding-top: 1rem;
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	@media (min-width: 980px) {
		.hero {
			display: grid;
			grid-template-columns: minmax(0, 1fr) minmax(320px, 420px);
			align-items: center;
			gap: 3.5rem;
		}
	}

	.hero__content {
		max-width: 720px;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.hero__heading {
		max-width: 26ch;
		font-size: clamp(2.2rem, 4vw, 3.6rem);
	}

	.hero__eyebrow {
		color: var(--color-accent);
		letter-spacing: 0.35em;
		text-transform: uppercase;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.hero__name {
		font-size: 1em;
	}

	.hero__line {
		margin: 0;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		font-size: 1.15rem;
		line-height: 1.8;
		color: var(--color-muted-strong);
	}

	.hero__line--alt {
		display: inline;
		font-family: 'Oferta do Dia', 'Inter', sans-serif;
		color: var(--color-fg);
		font-size: 1.2rem;
		letter-spacing: 0.01em;
	}

	.hero__cta {
		margin-top: 2rem;
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		align-items: center;
	}

	.ghost-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		background: rgba(255, 255, 255, 0.02);
		padding: 0.65rem 1rem;
		color: var(--color-fg);
		font-weight: 600;
		cursor: pointer;
		transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
	}

	.ghost-pill:hover {
		border-color: var(--color-accent);
		background: rgba(255, 255, 255, 0.08);
		transform: translateY(-1px);
	}

	.ghost-pill--small {
		font-size: 0.85rem;
		padding: 0.4rem 0.9rem;
	}

	.section-head {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.section-head--split {
		gap: 1.5rem;
	}

	.section-head--arrow {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.section-head--split {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		align-items: end;
	}

	.section-head .arrow {
		font-size: clamp(2rem, 5vw, 3rem);
		color: var(--color-secondary);
	}


	.card-grid {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 1.5rem;
	}

	.card-grid--missed {
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}

	.card {
		position: relative;
		border-radius: 1.5rem;
		overflow: hidden;
		background: var(--color-panel);
		border: 1px solid rgba(255, 255, 255, 0.08);
		box-shadow: var(--shadow-soft);
		min-height: 100%;
		isolation: isolate;
	}

	.card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.1));
		opacity: 0;
		transition: opacity 0.25s ease;
		z-index: 0;
	}

	.card:hover::after {
		opacity: 1;
	}

	.card__link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.card__media {
		width: 100%;
		height: auto;
		display: block;
		border: 0;
		border-radius: 0;
		opacity: 0;
		transform: scale(1.02);
		transition: opacity 0.5s ease, transform 0.6s ease;
	}

	.card__media.is-visible {
		opacity: 1;
		transform: scale(1);
	}

	.card__body {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.85rem;
		position: relative;
		z-index: 1;
	}

	.card__meta {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: var(--color-muted);
		margin: 0;
	}

	.card__meta--stats {
		font-size: 0.75rem;
		letter-spacing: 0.25em;
		color: rgba(255, 255, 255, 0.65);
	}

	.card--compact .card__media {
		max-height: 220px;
		object-fit: cover;
	}

	.center {
		margin-top: 2rem;
		text-align: center;
	}

	.featured-projects,
	.latest {
		margin-bottom: 4rem;
	}

	@media (max-width: 720px) {
		.hero__cta {
			flex-direction: column;
			align-items: stretch;
		}

		.section-head--arrow {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
