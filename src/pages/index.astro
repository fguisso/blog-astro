---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import GlowButton from '../components/GlowButton.astro';
import HeroCanvas from '../components/HeroCanvas.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const tagPalette = ['Creative', 'Idea', 'Lifestyle', 'Review'];
const tagLookup = new Map(posts.map((post, index) => [post.id, tagPalette[index % tagPalette.length]]));

const featuredPosts = posts.slice(0, 4);
const featuredIds = new Set(featuredPosts.map((post) => post.id));

const nonFeaturedPosts = posts.filter((post) => !featuredIds.has(post.id));
const latestInitial = nonFeaturedPosts.slice(0, 3);
const loadMorePool = nonFeaturedPosts.slice(3);

const consumedIds = new Set([
	...featuredIds,
	...latestInitial.map((post) => post.id),
]);
const missedPosts = posts.filter((post) => !consumedIds.has(post.id)).slice(0, 4);

const searchPayload = JSON.stringify(
	posts.map((post) => ({
		title: post.data.title,
		description: post.data.description,
		url: `/blog/${post.id}/`,
		tag: tagLookup.get(post.id),
	})),
);

const loadMorePayload = JSON.stringify(
	loadMorePool.map((post) => ({
		title: post.data.title,
		description: post.data.description,
		url: `/blog/${post.id}/`,
		tag: tagLookup.get(post.id),
		image: post.data.heroImage?.src ?? null,
	})),
);
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page-shell home-shell">
			<section class="hero">
				<div class="hero__content">
					<p class="eyebrow hero__eyebrow">Sobre</p>
					<h1 class="hero__heading">
						Oi, eu sou o <span class="gradient-text hero__name">Fernando Guisso</span>.
					</h1>
					<p class="hero__line">
						Sou Secure Software Engineer no willbank, onde lidero a área de AppSec e a plataforma interna de autenticação.
					</p>
					<p class="hero__line">
						Crio soluções que tornam a segurança parte natural do desenvolvimento, ajudando engenheiros a
						construir produtos seguros sem perder velocidade —
						<span class="hero__line--alt">porque segurança boa é aquela que vem junto com o código.</span>
					</p>
					<div class="hero__cta">
						<GlowButton href="#latest" variant="accent" size="lg">Ver posts</GlowButton>
						<GlowButton href="/blog" variant="ghost" size="lg">Arquivo completo</GlowButton>
					</div>
				</div>
				<HeroCanvas />
			</section>

			{featuredPosts.length > 0 && (
				<section class="featured">
					<div class="section-head">
						<p class="eyebrow">featured picks</p>
						<h2>Quatro histórias em destaque com camadas neon</h2>
					</div>
					<ul class="card-grid card-grid--featured">
						{featuredPosts.map((post) => (
							<li class="card card--featured">
								<a href={`/blog/${post.id}/`} class="card__link">
									{post.data.heroImage && (
										<Image
											src={post.data.heroImage}
											alt=""
											width={640}
											height={360}
											loading="lazy"
											class="card__media"
											data-lazy
										/>
									)}
									<span class="chip">{tagLookup.get(post.id)}</span>
									<div class="card__body">
										<p class="card__meta">Featured</p>
										<h3>{post.data.title}</h3>
									</div>
								</a>
							</li>
						))}
					</ul>
				</section>
			)}

			<section id="latest" class="latest">
				<div class="section-head section-head--split">
					<div>
						<p class="eyebrow">new posts</p>
						<h2>
							See what we’ve <em>written lately</em>
						</h2>
					</div>
					<p class="text-muted">
						A grade alterna um card hero e dois médios — toque no botão para carregar mais textos do
						arquivo sem recarregar a página.
					</p>
				</div>
				<ul id="latest-grid" class="card-grid card-grid--latest">
					{latestInitial.map((post, index) => (
						<li class={`card ${index === 0 ? 'card--hero' : 'card--stacked'}`}>
							<a href={`/blog/${post.id}/`} class="card__link">
								{post.data.heroImage && (
									<Image
										src={post.data.heroImage}
										alt=""
										width={800}
										height={540}
										loading="lazy"
										class="card__media"
										data-lazy
									/>
								)}
								<div class="card__body">
									<span class="chip chip--ghost">{tagLookup.get(post.id)}</span>
									<h3>{post.data.title}</h3>
									<p class="text-muted">{post.data.description}</p>
									<p class="card__meta">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
							</a>
						</li>
					))}
				</ul>
				{loadMorePool.length > 0 && (
					<div class="center">
						<GlowButton data-load-more variant="accent" size="sm">Load more</GlowButton>
					</div>
				)}
			</section>

			{missedPosts.length > 0 && (
				<section class="missed">
					<div class="section-head section-head--arrow">
						<h2>
							In case you <em>missed it</em>
						</h2>
						<span aria-hidden="true" class="arrow">→</span>
					</div>
					<ul class="card-grid card-grid--missed">
						{missedPosts.map((post) => (
							<li class="card card--compact">
								<a href={`/blog/${post.id}/`} class="card__link">
									{post.data.heroImage && (
										<Image
											src={post.data.heroImage}
											alt=""
											width={520}
											height={520}
											loading="lazy"
											class="card__media"
											data-lazy
										/>
									)}
									<div class="card__body">
										<span class="chip chip--ghost">{tagLookup.get(post.id)}</span>
										<h3>{post.data.title}</h3>
									</div>
								</a>
							</li>
						))}
					</ul>
				</section>
			)}
		</main>
		<Footer />

		<div
			id="search-overlay"
			class="search-overlay"
			hidden
			role="dialog"
			aria-modal="true"
			aria-labelledby="search-title"
		>
			<div class="search-overlay__box glow-box">
				<div class="search-overlay__head">
					<h3 id="search-title">Buscar posts</h3>
					<button type="button" class="ghost-pill ghost-pill--small" data-close>
						Fechar
					</button>
				</div>
				<input
					id="search-input"
					type="search"
					placeholder="Digite pelo menos 3 letras"
					autocomplete="off"
					class="search-input"
				/>
				<ul id="search-results" class="search-results">
					<li class="search-results__hint">Comece digitando para ver resultados.</li>
				</ul>
			</div>
		</div>

		<script type="module">
			const searchIndex = JSON.parse(String.raw`{searchPayload}`);
			const loadMoreData = JSON.parse(String.raw`{loadMorePayload}`);

			const latestGrid = document.getElementById('latest-grid');
			const loadMoreButton = document.querySelector('[data-load-more]');
			const searchOverlay = document.getElementById('search-overlay');
			const searchInput = document.getElementById('search-input');
			const searchResults = document.getElementById('search-results');
			const searchTriggers = document.querySelectorAll('[data-search-trigger]');
			const closeButtons = document.querySelectorAll('[data-close]');

			const createCard = (payload) => {
				const li = document.createElement('li');
				li.className = 'card card--stacked';
				li.innerHTML = `
        <a class="card__link" href="${payload.url}">
          ${payload.image ? `<img class="card__media" src="${payload.image}" alt="" loading="lazy" decoding="async" data-lazy />` : ''}
          <div class="card__body">
            <span class="chip chip--ghost">${payload.tag ?? 'Insight'}</span>
            <h3>${payload.title}</h3>
            <p class="text-muted">${payload.description}</p>
          </div>
        </a>
      `;
				return li;
			};

			if (loadMoreButton && loadMoreData.length) {
				let pointer = 0;
				const chunkSize = 3;
				loadMoreButton.addEventListener('click', () => {
					const slice = loadMoreData.slice(pointer, pointer + chunkSize);
					slice.forEach((item) => {
						latestGrid?.appendChild(createCard(item));
					});
					pointer += chunkSize;
					if (pointer >= loadMoreData.length) {
						loadMoreButton.remove();
					}
				});
			}

			const openSearch = () => {
				if (!searchOverlay) return;
				searchOverlay.hidden = false;
				searchOverlay.classList.add('is-visible');
				searchInput?.focus();
				searchTriggers.forEach((btn) => btn.setAttribute('aria-expanded', 'true'));
			};

			const closeSearch = () => {
				if (!searchOverlay) return;
				searchOverlay.classList.remove('is-visible');
				searchOverlay.hidden = true;
				if (searchInput) {
					searchInput.value = '';
				}
				if (searchResults) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Comece digitando para ver resultados.</li>';
				}
				searchTriggers.forEach((btn) => btn.setAttribute('aria-expanded', 'false'));
			};

			searchTriggers.forEach((btn) => btn.addEventListener('click', openSearch));
			closeButtons.forEach((btn) => btn.addEventListener('click', closeSearch));
			searchOverlay?.addEventListener('click', (event) => {
				if (event.target === searchOverlay) {
					closeSearch();
				}
			});
			document.addEventListener('keydown', (event) => {
				if (event.key === 'Escape') {
					closeSearch();
				}
			});

			searchInput?.addEventListener('input', (event) => {
				if (!(event.currentTarget instanceof HTMLInputElement)) return;
				const query = event.currentTarget.value.trim().toLowerCase();
				if (!searchResults) return;
				if (query.length < 3) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Digite pelo menos 3 letras para pesquisar.</li>';
					return;
				}
				const matches = searchIndex.filter((item) => {
					return (
						item.title.toLowerCase().includes(query) ||
						item.description.toLowerCase().includes(query)
					);
				});
				if (!matches.length) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Nenhum post encontrado. Tente outra palavra.</li>';
					return;
				}
				searchResults.innerHTML = matches
					.map(
						(item) => `
            <li>
              <a href="${item.url}">
                <span class="chip chip--ghost">${item.tag ?? 'Idea'}</span>
                <strong>${item.title}</strong>
                <p>${item.description}</p>
              </a>
            </li>
          `,
					)
					.join('');
			});

			const lazyImages = document.querySelectorAll('[data-lazy]');
			if ('IntersectionObserver' in window && lazyImages.length) {
				const observer = new IntersectionObserver((entries, obs) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add('is-visible');
							obs.unobserve(entry.target);
						}
					});
				}, {
					rootMargin: '50px',
				});

				lazyImages.forEach((img) => observer.observe(img));
			} else {
				lazyImages.forEach((img) => img.classList.add('is-visible'));
			}
		</script>
	</body>
</html>

<style>
	.home-shell {
		padding-top: 4rem;
		padding-bottom: 5rem;
	}

	.hero {
		margin-bottom: 4rem;
		padding-top: 1rem;
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	@media (min-width: 980px) {
		.hero {
			display: grid;
			grid-template-columns: minmax(0, 1fr) minmax(320px, 420px);
			align-items: center;
			gap: 3.5rem;
		}
	}

	.hero__content {
		max-width: 720px;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.hero__heading {
		max-width: 26ch;
		font-size: clamp(2.2rem, 4vw, 3.6rem);
	}

	.hero__eyebrow {
		color: var(--color-accent);
		letter-spacing: 0.35em;
		text-transform: uppercase;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.hero__name {
		font-size: 1em;
		text-shadow: 0 0 20px rgba(0, 255, 127, 0.35);
	}

	.hero__line {
		margin: 0;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		font-size: 1.15rem;
		line-height: 1.8;
		color: var(--color-muted-strong);
	}

	.hero__line--alt {
		display: inline;
		font-family: 'Oferta do Dia', 'Inter', sans-serif;
		color: var(--color-fg);
		font-size: 1.2rem;
		letter-spacing: 0.01em;
	}

	.hero__cta {
		margin-top: 2rem;
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		align-items: center;
	}

	.ghost-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		background: rgba(255, 255, 255, 0.02);
		padding: 0.65rem 1rem;
		color: var(--color-fg);
		font-weight: 600;
		cursor: pointer;
		transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
	}

	.ghost-pill:hover {
		border-color: var(--color-accent);
		background: rgba(255, 255, 255, 0.08);
		transform: translateY(-1px);
	}

	.ghost-pill--small {
		font-size: 0.85rem;
		padding: 0.4rem 0.9rem;
	}

	.section-head {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.section-head--split {
		gap: 1.5rem;
	}

	.section-head--arrow {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.section-head--split {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		align-items: end;
	}

	.section-head .arrow {
		font-size: clamp(2rem, 5vw, 3rem);
		color: var(--color-secondary);
	}

	.card-grid {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 1.5rem;
	}

	.card-grid--featured {
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.card-grid--latest {
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	}

	.card-grid--missed {
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}

	.card {
		position: relative;
		border-radius: 1.5rem;
		overflow: hidden;
		background: var(--color-panel);
		border: 1px solid rgba(255, 255, 255, 0.08);
		box-shadow: var(--shadow-soft);
		min-height: 100%;
		isolation: isolate;
	}

	.card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.1));
		opacity: 0;
		transition: opacity 0.25s ease;
		z-index: 0;
	}

	.card:hover::after {
		opacity: 1;
	}

	.card__link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.card__media {
		width: 100%;
		height: auto;
		display: block;
		border: 0;
		border-radius: 0;
		opacity: 0;
		transform: scale(1.02);
		transition: opacity 0.5s ease, transform 0.6s ease;
	}

	.card__media.is-visible {
		opacity: 1;
		transform: scale(1);
	}

	.card__body {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.85rem;
		position: relative;
		z-index: 1;
	}

	.card__meta {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: var(--color-muted);
		margin: 0;
	}

	.card--featured .card__body {
		position: absolute;
		inset: auto 1.5rem 1.5rem;
	}

	.card--featured .card__link {
		justify-content: flex-end;
	}

	.card--featured .card__media {
		height: 100%;
		object-fit: cover;
	}

	.card--hero .card__media {
		max-height: 360px;
		object-fit: cover;
	}

	.card--stacked .card__media {
		max-height: 240px;
		object-fit: cover;
	}

	.card--compact .card__media {
		max-height: 220px;
		object-fit: cover;
	}

	.chip {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.35rem 0.9rem;
		border-radius: 999px;
		background: rgba(255, 255, 255, 0.1);
		color: var(--color-fg);
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		position: relative;
		z-index: 1;
	}

	.chip--ghost {
		background: rgba(255, 255, 255, 0.06);
		border: 1px solid rgba(255, 255, 255, 0.15);
	}

	.card--featured .chip {
		position: absolute;
		top: 1rem;
		left: 1rem;
	}

	.center {
		margin-top: 2rem;
		text-align: center;
	}

	.featured,
	.latest,
	.missed {
		margin-bottom: 4rem;
	}

	.search-overlay {
		position: fixed;
		inset: 0;
		background: rgba(2, 2, 4, 0.88);
		display: grid;
		place-items: center;
		padding: 1.5rem;
		z-index: 20;
		opacity: 0;
		transition: opacity 0.25s ease;
	}

	.search-overlay[hidden] {
		display: none !important;
	}

	.search-overlay.is-visible {
		opacity: 1;
	}

	.search-overlay__box {
		width: min(640px, 100%);
		max-height: 80vh;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.search-overlay__head {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.search-input {
		width: 100%;
		padding: 0.85rem 1rem;
		border-radius: var(--border-radius);
		border: 1px solid rgba(255, 255, 255, 0.1);
		background: rgba(255, 255, 255, 0.03);
		color: var(--color-fg);
		font-size: 1rem;
	}

	.search-results {
		list-style: none;
		margin: 0;
		padding: 0;
		max-height: 45vh;
		overflow-y: auto;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.search-results li {
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: var(--border-radius);
		padding: 0.9rem 1rem;
		background: rgba(255, 255, 255, 0.02);
	}

	.search-results li a {
		color: var(--color-fg);
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
	}

	.search-results li p {
		margin: 0;
		font-size: 0.95rem;
		color: var(--color-muted);
	}

	.search-results__hint {
		text-align: center;
		color: var(--color-muted);
	}

	@media (max-width: 720px) {
		.hero__cta {
			flex-direction: column;
			align-items: stretch;
		}

		.section-head--arrow {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
