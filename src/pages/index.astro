---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import GlowButton from '../components/GlowButton.astro';
import HeroCanvas from '../components/HeroCanvas.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import FeaturedProjectCard from '../components/FeaturedProjectCard.astro';
import PostCard from '../components/PostCard.astro';
import { themeConfig } from '../theme.config';
import { withBase } from '../utils/paths';
import { routes } from '../utils/routes';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const tagPalette = ['Creative', 'Idea', 'Lifestyle', 'Review'];
const tagLookup = new Map(posts.map((post, index) => [post.id, tagPalette[index % tagPalette.length]]));

const wordsPerMinute = 200;
const numberFormatter = new Intl.NumberFormat('pt-BR');
const postStats = new Map(
	posts.map((post) => {
		const body = post.body ?? '';
		const words = body ? body.trim().split(/\s+/).filter(Boolean).length : 0;
		const minutes = Math.max(1, Math.round(words / wordsPerMinute));
		return [
			post.id,
			{
				words,
				minutes,
				label: words ? `${numberFormatter.format(words)} palavras · ${minutes} min` : null,
			},
		];
	}),
);

const latestInitial = posts.slice(0, 3);
const loadMorePool = posts.slice(3);

const consumedIds = new Set([
	...latestInitial.map((post) => post.id),
]);
const missedPosts = posts.filter((post) => !consumedIds.has(post.id)).slice(0, 4);

const searchPayload = JSON.stringify(
	posts.map((post) => ({
		title: post.data.title,
		description: post.data.description,
		url: withBase(`/blog/${post.id}/`),
		tag: tagLookup.get(post.id),
	})),
);

const loadMorePayload = JSON.stringify(
	loadMorePool.map((post) => ({
		title: post.data.title,
		description: post.data.description,
		url: withBase(`/blog/${post.id}/`),
		tag: tagLookup.get(post.id),
		image: post.data.heroImage?.src ? withBase(post.data.heroImage.src) : null,
		date: post.data.pubDate?.toISOString() ?? null,
		statsLabel: postStats.get(post.id)?.label ?? null,
	})),
);

const { site, featuredProjects } = themeConfig;
const homeLabTagHref = routes.blogTagFilter('home-lab');
const projectsHref = routes.projects();
const blogHref = routes.blog();
---

<!doctype html>
<html lang="pt-BR">
		<head>
			<BaseHead title={site.title} description={site.description} />
	</head>
	<body>
		<Header />
		<main class="page-shell home-shell">
			<section class="hero">
				<div class="hero__content">
					<p class="eyebrow hero__eyebrow">Sobre</p>
					<h1 class="hero__heading">
						Oi, eu sou o <span class="display-special primary">Fernando Guisso</span>.
					</h1>
					<p class="hero__line">
						Sou Secure Software Engineer no willbank, onde lidero a área de AppSec e a plataforma interna de autenticação.
					</p>
					<p class="hero__line">
						Crio soluções que tornam a segurança parte natural do desenvolvimento, ajudando engenheiros a
						construir produtos seguros sem perder velocidade —
						<span class="hero__line--alt">porque segurança boa é aquela que vem junto com o código.</span>
					</p>
					<p class="hero__line">
						Quando sobra energia, perco horas afinando meu <strong>home lab</strong>: você encontra algumas histórias
						com a tag <a href={homeLabTagHref}>home-lab</a> ou mergulha nos detalhes técnicos dentro da{' '}
						<a href="https://wiki.guisso.dev/linux/homelab" target="_blank" rel="noopener noreferrer">minha wiki</a>.
					</p>
					<div class="hero__cta">
						<GlowButton href="#latest" variant="accent" size="lg">Ver posts</GlowButton>
						<GlowButton href={blogHref} variant="ghost" size="lg">Arquivo completo</GlowButton>
					</div>
				</div>
				<HeroCanvas />
			</section>

			{featuredProjects.length > 0 && (
				<section class="featured-projects">
					<div class="featured-projects__head">
						<div class="featured-projects__head-text">
							<p class="eyebrow">projetos principais</p>
              <h1 class="featured-projects__title"><span class="display-special primary">Projetos</span> em que estou trabalhando agora</h2>
						</div>
						<GlowButton href={projectsHref} variant="ghost" size="sm">Ver projetos</GlowButton>
					</div>
						<ul class="featured-projects__grid">
							{featuredProjects.map((project) => (
							<FeaturedProjectCard project={project} />
						))}
					</ul>
				</section>
			)}

				<section id="latest" class="latest">
					<div class="section-head section-head--split">
						<div>
							<p class="eyebrow">novos artigos</p>
							<h2>
                Veja o que eu <em><span class="display-special primary">ando escrevendo</span></em>
							</h2>
						</div>
					</div>
					<ul id="latest-grid" class="featured-projects__grid featured-projects__grid--posts">
						{latestInitial.map((post) => {
							const stats = postStats.get(post.id);
							return (
								<PostCard
									href={`/blog/${post.id}/`}
									title={post.data.title}
									description={post.data.description}
									statsLabel={stats?.label}
									tag={tagLookup.get(post.id)}
									image={post.data.heroImage?.src}
								>
									<FormattedDate slot="label" date={post.data.pubDate} />
								</PostCard>
							);
						})}
					</ul>
					{loadMorePool.length > 0 && (
					<div class="center">
						<GlowButton href={blogHref} variant="accent" size="sm">Veja mais</GlowButton>
					</div>
				)}
			</section>

		</main>
		<Footer />

		<div
			id="search-overlay"
			class="search-overlay"
			hidden
			role="dialog"
			aria-modal="true"
			aria-labelledby="search-title"
		>
			<div class="search-overlay__box glow-box">
				<div class="search-overlay__head">
					<h3 id="search-title">Buscar posts</h3>
					<button type="button" class="ghost-pill ghost-pill--small" data-close>
						Fechar
					</button>
				</div>
				<input
					id="search-input"
					type="search"
					placeholder="Digite pelo menos 3 letras"
					autocomplete="off"
					class="search-input"
				/>
				<ul id="search-results" class="search-results">
					<li class="search-results__hint">Comece digitando para ver resultados.</li>
				</ul>
			</div>
		</div>

		<script type="module">
			const searchIndex = JSON.parse(String.raw`{searchPayload}`);
			const loadMoreData = JSON.parse(String.raw`{loadMorePayload}`);

			const latestGrid = document.getElementById('latest-grid');
			const loadMoreButton = document.querySelector('[data-load-more]');
			const searchOverlay = document.getElementById('search-overlay');
			const searchInput = document.getElementById('search-input');
			const searchResults = document.getElementById('search-results');
			const searchTriggers = document.querySelectorAll('[data-search-trigger]');
			const closeButtons = document.querySelectorAll('[data-close]');

			const createCard = (payload) => {
				const li = document.createElement('li');
				li.className = 'featured-project featured-project--post';
				if (payload.image) {
					li.style.setProperty('--project-image', `url("${payload.image}")`);
				}
				const formattedDate = payload.date
					? new Intl.DateTimeFormat('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' }).format(
							new Date(payload.date),
					  )
					: 'Post';
				const statsLabel = payload.statsLabel ?? '';
				li.innerHTML = `
        <a class="featured-project__link" href="${payload.url}">
          <div class="featured-project__content">
            <span class="featured-project__label">${formattedDate}</span>
            <h3 class="featured-project__name">${payload.title}</h3>
            <p class="featured-project__description">${payload.description}</p>
            ${statsLabel ? `<p class="featured-project__stats">${statsLabel}</p>` : ''}
            <span class="chip chip--ghost">${payload.tag ?? 'Insight'}</span>
            <span class="featured-project__cta">ler artigo ↗</span>
          </div>
        </a>
      `;
				return li;
			};

			if (loadMoreButton && loadMoreData.length) {
				let pointer = 0;
				const chunkSize = 3;
				loadMoreButton.addEventListener('click', () => {
					const slice = loadMoreData.slice(pointer, pointer + chunkSize);
					slice.forEach((item) => {
						latestGrid?.appendChild(createCard(item));
					});
					pointer += chunkSize;
					if (pointer >= loadMoreData.length) {
						loadMoreButton.remove();
					}
				});
			}

			const openSearch = () => {
				if (!searchOverlay) return;
				searchOverlay.hidden = false;
				searchOverlay.classList.add('is-visible');
				searchInput?.focus();
				searchTriggers.forEach((btn) => btn.setAttribute('aria-expanded', 'true'));
			};

			const closeSearch = () => {
				if (!searchOverlay) return;
				searchOverlay.classList.remove('is-visible');
				searchOverlay.hidden = true;
				if (searchInput) {
					searchInput.value = '';
				}
				if (searchResults) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Comece digitando para ver resultados.</li>';
				}
				searchTriggers.forEach((btn) => btn.setAttribute('aria-expanded', 'false'));
			};

			searchTriggers.forEach((btn) => btn.addEventListener('click', openSearch));
			closeButtons.forEach((btn) => btn.addEventListener('click', closeSearch));
			searchOverlay?.addEventListener('click', (event) => {
				if (event.target === searchOverlay) {
					closeSearch();
				}
			});
			document.addEventListener('keydown', (event) => {
				if (event.key === 'Escape') {
					closeSearch();
				}
			});

			searchInput?.addEventListener('input', (event) => {
				if (!(event.currentTarget instanceof HTMLInputElement)) return;
				const query = event.currentTarget.value.trim().toLowerCase();
				if (!searchResults) return;
				if (query.length < 3) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Digite pelo menos 3 letras para pesquisar.</li>';
					return;
				}
				const matches = searchIndex.filter((item) => {
					return (
						item.title.toLowerCase().includes(query) ||
						item.description.toLowerCase().includes(query)
					);
				});
				if (!matches.length) {
					searchResults.innerHTML =
						'<li class="search-results__hint">Nenhum post encontrado. Tente outra palavra.</li>';
					return;
				}
				searchResults.innerHTML = matches
					.map(
						(item) => `
            <li>
              <a href="${item.url}">
                <span class="chip chip--ghost">${item.tag ?? 'Idea'}</span>
                <strong>${item.title}</strong>
                <p>${item.description}</p>
              </a>
            </li>
          `,
					)
					.join('');
			});

			const lazyImages = document.querySelectorAll('[data-lazy]');
			if ('IntersectionObserver' in window && lazyImages.length) {
				const observer = new IntersectionObserver((entries, obs) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add('is-visible');
							obs.unobserve(entry.target);
						}
					});
				}, {
					rootMargin: '50px',
				});

				lazyImages.forEach((img) => observer.observe(img));
			} else {
				lazyImages.forEach((img) => img.classList.add('is-visible'));
			}
		</script>
	</body>
</html>

<style>
	.home-shell {
		padding-top: 4rem;
		padding-bottom: 5rem;
	}

	.hero {
		margin-bottom: 4rem;
		padding-top: 1rem;
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	@media (min-width: 980px) {
		.hero {
			display: grid;
			grid-template-columns: minmax(0, 1fr) minmax(320px, 420px);
			align-items: center;
			gap: 3.5rem;
		}
	}

	.hero__content {
		max-width: 720px;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.hero__heading {
		max-width: 26ch;
		font-size: clamp(2.2rem, 4vw, 3.6rem);
	}

	.hero__eyebrow {
		color: var(--color-accent);
		letter-spacing: 0.35em;
		text-transform: uppercase;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.hero__name {
		font-size: 1em;
	}

	.hero__line {
		margin: 0;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		font-size: 1.15rem;
		line-height: 1.8;
		color: var(--color-muted-strong);
	}

	.hero__line--alt {
		display: inline;
		font-family: 'Oferta do Dia', 'Inter', sans-serif;
		color: var(--color-fg);
		font-size: 1.2rem;
		letter-spacing: 0.01em;
	}

	.hero__cta {
		margin-top: 2rem;
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		align-items: center;
	}

	.ghost-pill {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		background: rgba(255, 255, 255, 0.02);
		padding: 0.65rem 1rem;
		color: var(--color-fg);
		font-weight: 600;
		cursor: pointer;
		transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
	}

	.ghost-pill:hover {
		border-color: var(--color-accent);
		background: rgba(255, 255, 255, 0.08);
		transform: translateY(-1px);
	}

	.ghost-pill--small {
		font-size: 0.85rem;
		padding: 0.4rem 0.9rem;
	}

	.section-head {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.section-head--split {
		gap: 1.5rem;
	}

	.section-head--arrow {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.section-head--split {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		align-items: end;
	}

	.section-head .arrow {
		font-size: clamp(2rem, 5vw, 3rem);
		color: var(--color-secondary);
	}


	.card-grid {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 1.5rem;
	}

	.card-grid--missed {
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}

	.card {
		position: relative;
		border-radius: 1.5rem;
		overflow: hidden;
		background: var(--color-panel);
		border: 1px solid rgba(255, 255, 255, 0.08);
		box-shadow: var(--shadow-soft);
		min-height: 100%;
		isolation: isolate;
	}

	.card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.1));
		opacity: 0;
		transition: opacity 0.25s ease;
		z-index: 0;
	}

	.card:hover::after {
		opacity: 1;
	}

	.card__link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.card__media {
		width: 100%;
		height: auto;
		display: block;
		border: 0;
		border-radius: 0;
		opacity: 0;
		transform: scale(1.02);
		transition: opacity 0.5s ease, transform 0.6s ease;
	}

	.card__media.is-visible {
		opacity: 1;
		transform: scale(1);
	}

	.card__body {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.85rem;
		position: relative;
		z-index: 1;
	}

	.card__meta {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: var(--color-muted);
		margin: 0;
	}

	.card__meta--stats {
		font-size: 0.75rem;
		letter-spacing: 0.25em;
		color: rgba(255, 255, 255, 0.65);
	}

	.card--compact .card__media {
		max-height: 220px;
		object-fit: cover;
	}

	.center {
		margin-top: 2rem;
		text-align: center;
	}

	.featured-projects,
	.latest {
		margin-bottom: 4rem;
	}

	.search-overlay {
		position: fixed;
		inset: 0;
		background: rgba(2, 2, 4, 0.88);
		display: grid;
		place-items: center;
		padding: 1.5rem;
		z-index: 20;
		opacity: 0;
		transition: opacity 0.25s ease;
	}

	.search-overlay[hidden] {
		display: none !important;
	}

	.search-overlay.is-visible {
		opacity: 1;
	}

	.search-overlay__box {
		width: min(640px, 100%);
		max-height: 80vh;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.search-overlay__head {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.search-input {
		width: 100%;
		padding: 0.85rem 1rem;
		border-radius: var(--border-radius);
		border: 1px solid rgba(255, 255, 255, 0.1);
		background: rgba(255, 255, 255, 0.03);
		color: var(--color-fg);
		font-size: 1rem;
	}

	.search-results {
		list-style: none;
		margin: 0;
		padding: 0;
		max-height: 45vh;
		overflow-y: auto;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.search-results li {
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: var(--border-radius);
		padding: 0.9rem 1rem;
		background: rgba(255, 255, 255, 0.02);
	}

	.search-results li a {
		color: var(--color-fg);
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
	}

	.search-results li p {
		margin: 0;
		font-size: 0.95rem;
		color: var(--color-muted);
	}

	.search-results__hint {
		text-align: center;
		color: var(--color-muted);
	}

	@media (max-width: 720px) {
		.hero__cta {
			flex-direction: column;
			align-items: stretch;
		}

		.section-head--arrow {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
