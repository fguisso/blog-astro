---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import GlowButton from '../../../components/GlowButton.astro';
import Header from '../../../components/Header.astro';
import PostCard from '../../../components/PostCard.astro';
import { t } from '../../../i18n';
import { getHtmlLang, type LocaleCode } from '../../../i18n/config';
import { getSiteMeta } from '../../../theme.config';
import { routes } from '../../../utils/routes';

const locale: LocaleCode = 'en';
const htmlLang = getHtmlLang(locale);
const currentPath = Astro.url?.pathname ?? '/';
const currentSearch = Astro.url?.search ?? '';
const slugFor = (post: CollectionEntry<'blog'>) => post.data.canonicalSlug ?? post.slug;
const posts = (await getCollection('blog'))
	.filter((post) => post.data.lang === locale)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const wordsPerMinute = 200;
const numberFormatter = new Intl.NumberFormat(htmlLang);
const wordsLabel = t(locale, 'common.wordsLabel');
const minutesLabel = t(locale, 'common.minutesLabel');
const postStats = new Map(
	posts.map((post) => {
		const body = post.body ?? '';
		const words = body ? body.trim().split(/\s+/).filter(Boolean).length : 0;
		const minutes = Math.max(1, Math.round(words / wordsPerMinute));
		return [
			slugFor(post),
			{
				label: words
					? `${numberFormatter.format(words)} ${wordsLabel} Â· ${minutes} ${minutesLabel}`
					: null,
			},
		];
	}),
);

const rssHref = routes.rss(locale);
const tagsHref = routes.tags(locale);
const heroHeadingHtml = t(locale, 'blog.heroHeading');
const heroDescription = t(locale, 'blog.heroDescription');
const heroRssCta = t(locale, 'blog.rssCta');
const heroTagsCta = t(locale, 'blog.tagsCta');
const site = getSiteMeta(locale);
---

<!doctype html>
<html lang={htmlLang}>
	<head>
		<BaseHead title={`Blog | ${site.title}`} description={site.description} locale={locale} />
	</head>
	<body>
		<Header locale={locale} pathname={currentPath} search={currentSearch} />
		<main class="page-shell blog-shell">
			<section class="blog-header">
				<h1 set:html={heroHeadingHtml}></h1>
				<p>{heroDescription}</p>
				<div class="blog-header__actions">
					<GlowButton href={rssHref} variant="ghost" size="sm">
						{heroRssCta}
					</GlowButton>
					<GlowButton href={tagsHref} variant="ghost" size="sm">
						{heroTagsCta}
					</GlowButton>
				</div>
			</section>

			<section>
				<ul class="featured-projects__grid featured-projects__grid--posts blog-posts-grid">
					{posts.map((post) => {
					const stats = postStats.get(slugFor(post));
						return (
								<PostCard
								href={routes.blogPost(slugFor(post), locale)}
									title={post.data.title}
									description={post.data.description}
									statsLabel={stats?.label}
									tag={post.data.tags?.[0] ?? null}
								image={post.data.heroImage?.src}
							>
								<FormattedDate slot="label" date={post.data.pubDate} locale={htmlLang} />
							</PostCard>
						);
					})}
				</ul>
			</section>
		</main>
		<Footer locale={locale} />
	</body>
</html>

<style>
	.blog-shell {
		padding-top: 4rem;
	}

	.blog-header {
		max-width: 760px;
		margin: 0 auto 3rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		text-align: center;
		align-items: center;
	}

	.blog-header__actions {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.blog-posts-grid {
		margin-top: 2rem;
	}
</style>
