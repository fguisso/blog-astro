---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import GlowBox from '../../components/GlowBox.astro';
import GlowButton from '../../components/GlowButton.astro';
import Header from '../../components/Header.astro';
import Callout from '../../components/Callout.astro';
import FeaturedProjectCard from '../../components/FeaturedProjectCard.astro';
import TalkAvatarBadge from '../../components/TalkAvatarBadge.astro';
import Timeline from '../../components/Timeline.astro';
import LogoWordmark from '../../components/LogoWordmark.astro';
import PostCard from '../../components/PostCard.astro';
import Chip from '../../components/Chip.astro';
import { getHtmlLang, type LocaleCode } from '../../i18n/config';
import { getSiteMeta, themeConfig } from '../../theme.config';
import { routes } from '../../utils/routes';

const palette = [
	{ name: 'Base background', token: '--color-bg', value: '#020204' },
	{ name: 'Panel', token: '--color-panel', value: '#131318' },
	{ name: 'Primary text', token: '--color-fg', value: '#F5F5FF' },
	{ name: 'Muted text', token: '--color-muted', value: '#A8A9BB' },
	{ name: 'Neon green', token: '--color-accent', value: '#00FF7F' },
	{ name: 'Neon purple', token: '--color-secondary', value: '#9A1AFF' },
	{ name: 'Neon blue', token: '--color-highlight', value: '#6E6EFF' },
];

const typography = [
	{
		label: 'Hero / H1',
		stack: 'Space Grotesk Bold ¬∑ clamp(48px, 6vw, 72px)',
		description: 'H1s and hero titles. Only use gradients when wrapping text in span.primary.',
	},
	{
		label: 'Sections / H2‚ÄìH3',
		stack: 'Space Grotesk SemiBold ¬∑ 32‚Äì40px',
		description: 'Section headings. Keep them in Space Grotesk to preserve rhythm.',
	},
	{
		label: 'Body',
		stack: 'Inter Regular ¬∑ 18px ¬∑ line-height 1.7',
		description: 'Paragraphs, descriptions, and card notes.',
	},
	{
		label: 'Highlight span',
		stack: 'Oferta do Dia + span.primary',
		description: 'Only for short snippets like badges, keywords, or inline CTAs.',
	},
];

const buttonVariants = [
	{ variant: 'primary', label: 'Primary', usage: 'Subtle inline link for cards and paragraphs.' },
	{ variant: 'accent', label: 'Accent', usage: 'Main neon CTA for pages and forms.' },
	{ variant: 'secondary', label: 'Secondary', usage: 'Support links that shouldn‚Äôt steal focus.' },
	{ variant: 'outline', label: 'Outline', usage: 'CTA with transparent background on dark areas.' },
	{ variant: 'ghost', label: 'Ghost', usage: 'Utility buttons such as filters and anchors.' },
 ] as const;

const gradientSwatches = [
	{
		label: 'Glow mesh',
		token: '--glow-gradient',
		description: 'Global background. Blends green, purple, and blue in a radial blur.',
		variant: 'mesh',
	},
	{
		label: 'Primary beam',
		token: 'span.primary',
		description: 'Default gradient text for headlines and highlights.',
		variant: 'beam',
	},
	{
		label: 'Neon shield',
		token: 'GlowBox::before',
		description: 'Glowing borders used by structural components.',
		variant: 'shield',
	},
];

const postSamples = [
	{
		title: 'Neon guardrails for the AppSec pipeline',
		description: 'How I wired scanners, alerts, and feature flags into a single flow without blocking deploys.',
		dateLabel: '24 Jun 2024',
		stats: '1.1k words ¬∑ 6 min',
		tag: 'AppSec',
		image: 'https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&fit=crop&w=1400&q=80',
	},
	{
		title: 'Home lab as authentication staging',
		description: 'VM orchestration plus WireGuard tunnels to validate flows without touching the official environment.',
		dateLabel: '18 May 2024',
		stats: '980 words ¬∑ 5 min',
		tag: 'Home-lab',
		image: 'https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1400&q=80',
	},
	{
		title: 'Neon design tokens for Figma and code',
		description: 'Documented how to keep colors and spacing aligned across every surface.',
		dateLabel: '09 Apr 2024',
		stats: '760 words ¬∑ 4 min',
		tag: 'Design',
		image: 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=1400&q=80',
	},
];

const eyebrowSamples = [
	{
		text: 'style guide',
		label: 'Hero / Context',
		usage: 'Sits above H1 to identify the page or primary section.',
	},
	{
		text: 'components',
		label: 'Inner sections',
		usage: 'Splits long blocks and builds rhythm on long pages.',
	},
	{
		text: 'quick insight',
		label: 'Cards and meta',
		usage: 'Use in cards, callouts, and post metadata to reinforce the topic.',
	},
];

const logoMarks = [
	{
		label: 'Monograma G',
		context: 'Badge micro para scripts e GTuner.',
		variant: 'mono',
		props: { label: 'g', showRightMarker: false, width: 110 },
	},
	{
		label: 'gwiki wordmark',
		context: 'wiki.guisso.dev',
		variant: 'wiki',
		props: { label: 'gwiki', width: 200, showRightMarker: false },
	},
	{
		label: 'gtuner wordmark',
		context: 'guisso.dev/gtuner',
		variant: 'tuner',
		props: { label: 'gtuner', width: 220, showRightMarker: false },
	},
];

const locale: LocaleCode = 'en';
const htmlLang = getHtmlLang(locale);
const currentPath = Astro.url?.pathname ?? '/';
const currentSearch = Astro.url?.search ?? '';
const site = getSiteMeta(locale);
const { featuredProjects, featuredProjectsEn } = themeConfig;
const localizedFeaturedProjects =
	featuredProjectsEn && featuredProjectsEn.length > 0 ? featuredProjectsEn : featuredProjects;
const projectSamples = localizedFeaturedProjects.slice(0, 2);
const projectsHref = routes.projects(locale);
const samplePostHref = routes.blogPost('exemplo', locale);
---

<!doctype html>
<html lang={htmlLang}>
	<head>
		<BaseHead
			title={`Style Guide ¬∑ ${site.title}`}
			description="Visual reference with every neon component used across the blog."
			locale={locale}
		/>
	</head>
	<body>
		<Header locale={locale} pathname={currentPath} search={currentSearch} />
		<main class="page-shell style-guide-shell">
				<section class="style-guide__hero">
					<p class="eyebrow">style guide</p>
					<h1 class="display-headline">
						<span class="display-special primary">Every single</span>
						<span>ready-made block from the neon kit</span>
					</h1>
					<p>
						This page gathers the real components from the blog so reviews, QA, and new layouts stay in sync. Everything here reuses the same dark theme with neon gradients‚Äîno external UI libraries needed.
					</p>
					<p class="style-guide__hero-note">
						Need a new section or component? Duplicate the matching block from this guide, edit the content, and keep the same design tokens. Whenever you want the old Oferta do Dia font, wrap the text in <code>&lt;span class="display-special primary"&gt;</code> to apply the default gradient.
					</p>
				<div class="style-guide__hero-cta">
					<GlowButton href="#componentes" variant="accent" size="lg">See components</GlowButton>
					<GlowButton href={projectsHref} variant="ghost" size="lg">Projects using the kit</GlowButton>
				</div>
			</section>

			<section class="style-guide__section" id="cores">
				<div class="style-guide__section-head">
					<p class="eyebrow">colors</p>
					<h2>Official palette and tokens</h2>
					<p>Always rely on these tokens. They already have the right contrast for the dark background and follow the same neon gradients.</p>
				</div>
				<GlowBox accent="highlight" class="style-guide__panel">
					<ul class="palette-grid">
						{palette.map((color) => (
							<li class="palette-card">
								<span class="palette-swatch" style={`background: ${color.token.startsWith('--color') ? `var(${color.token})` : color.value};`}></span>
								<p class="palette-name">{color.name}</p>
								<p class="palette-token">{color.token}</p>
								<p class="palette-value">{color.value}</p>
							</li>
						))}
					</ul>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="gradientes">
				<div class="style-guide__section-head">
					<p class="eyebrow">gradients</p>
					<h2>How the glow is applied</h2>
					<p>
						These three gradients keep the neon language consistent across backgrounds, text, and borders. Combine them with <code>span.primary</code> to fire the same beam used on the homepage.
					</p>
				</div>
				<GlowBox accent="accent" class="style-guide__panel gradient-panel">
					<ul class="gradient-grid">
						{gradientSwatches.map((item) => (
							<li class={`gradient-card gradient-card--${item.variant}`}>
								<div class="gradient-card__preview"></div>
								<div class="gradient-card__body">
									<p class="gradient-card__label">{item.label}</p>
									<p class="gradient-card__token">{item.token}</p>
									<p class="gradient-card__description">{item.description}</p>
								</div>
							</li>
						))}
					</ul>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="tipografia">
				<div class="style-guide__section-head">
					<p class="eyebrow">typography</p>
					<h2>Type scale</h2>
					<p>Space Grotesk leads the headings, Inter handles body copy, and Oferta do Dia is reserved for special spans.</p>
				</div>
				<GlowBox accent="secondary" padding="relaxed" class="style-guide__panel">
					<div class="type-grid">
						{typography.map((token) => (
							<div class="type-card">
								<p class="type-label">{token.label}</p>
								<p class="type-stack">{token.stack}</p>
								<p class="type-description">{token.description}</p>
							</div>
						))}
					</div>
				</GlowBox>
				<GlowBox accent="highlight" class="style-guide__panel type-samples">
					<div>
						<p class="eyebrow">Heading 1</p>
						<h1 class="display-headline">Heading 1 ¬∑ Space Grotesk 64px</h1>
					</div>
					<div>
						<p class="eyebrow">Heading 2</p>
						<h2 class="display-headline">Heading 2 ¬∑ Space Grotesk 40px</h2>
					</div>
					<div>
						<p class="eyebrow">Heading 3</p>
						<h3 class="display-headline">Heading 3 ¬∑ Space Grotesk 28px</h3>
					</div>
					<div>
						<p class="eyebrow">Paragraph</p>
						<p>
							This is the base: Inter 18px, line-height 1.7. Use <span class="display-special primary">span.primary</span> for Oferta do Dia highlights when you need extra contrast.
						</p>
					</div>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="eyebrows">
				<div class="style-guide__section-head">
					<p class="eyebrow">micro labels</p>
					<h2>Approved eyebrows</h2>
					<p>Lowercase labels with generous tracking keep the neon narrative consistent and precede every heading.</p>
				</div>
				<GlowBox accent="secondary" class="style-guide__panel">
					<div class="eyebrow-grid">
						{eyebrowSamples.map((item) => (
							<div class="eyebrow-card">
								<p class="eyebrow">{item.text}</p>
								<p class="eyebrow-card__label">{item.label}</p>
								<p class="eyebrow-card__usage">{item.usage}</p>
							</div>
						))}
					</div>
					<p class="eyebrow-note">
						Always use the <code>.eyebrow</code> class: Inter uppercase, generous tracking, and <code>var(--color-muted)</code>. Never swap it for bold text.
					</p>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="componentes">
				<div class="style-guide__section-head">
					<p class="eyebrow">components</p>
					<h2>Buttons and states</h2>
					<p>GlowButton spans the entire CTA range. Combine variants and sizes to match any context.</p>
				</div>
				<GlowBox accent="accent" class="style-guide__panel">
					<div class="button-grid">
						{buttonVariants.map((btn) => (
							<div class="button-card">
								<GlowButton variant={btn.variant}>{btn.label}</GlowButton>
								<p>{btn.usage}</p>
							</div>
						))}
					</div>
					<div class="button-grid button-grid--sizes">
						<GlowButton size="sm" variant="ghost">Compact</GlowButton>
						<GlowButton size="md" variant="primary">Default</GlowButton>
						<GlowButton size="lg" variant="accent">Express</GlowButton>
					</div>
					</GlowBox>
				</section>

				<section class="style-guide__section" id="chips">
					<div class="style-guide__section-head">
						<p class="eyebrow">labels</p>
						<h2>Rounded chips</h2>
						<p>The Chip component concentrates all rounded tags used on cards and filters. Ghost is the default variant.</p>
					</div>
					<GlowBox accent="highlight" class="chip-panel">
						<div class="chip-grid">
							<Chip>AppSec</Chip>
							<Chip>Home Lab</Chip>
							<Chip>Infra</Chip>
							<Chip variant="solid">Release</Chip>
						</div>
						<p class="chip-panel__note">
							Use <code>&lt;Chip variant="ghost"&gt;</code> on cards (matches the blog) and go with <code>variant="solid"</code> whenever you need extra contrast.
						</p>
					</GlowBox>
				</section>

				<section class="style-guide__section" id="pills">
					<div class="style-guide__section-head">
						<p class="eyebrow">badges</p>
						<h2>Pills for numbered lists</h2>
						<p>Utility classes for annotating: base <code>.pill</code> + color.</p>
					</div>
					<GlowBox accent="highlight" class="pill-panel">
						<div class="pill-row">
							<span class="pill">base</span>
							<span class="pill pill-orange">A1</span>
							<span class="pill pill-red">T1</span>
							<span class="pill pill-blue">C1</span>
							<span class="pill pill-green">G1</span>
							<span class="pill pill-purple">P1</span>
						</div>
						<p>
							Start with <code>.pill</code> and pair with:
							<code>.pill-orange</code> , <code>.pill-red</code> , <code>.pill-blue</code> ,
							<code>.pill-green</code> , <code>.pill-purple</code>.
							Example: <code>&lt;span class="pill pill-red"&gt;T2&lt;/span&gt;</code>.
						</p>
					</GlowBox>
				</section>

			<section class="style-guide__section" id="post-meta-inline">
				<div class="style-guide__section-head">
					<p class="eyebrow">posts</p>
					<h2>Inline post meta</h2>
					<p>Publish date + word count + reading time in a single row above the chips. No borders‚Äîjust icon and text.</p>
				</div>
				<GlowBox accent="accent" class="style-guide__panel post-meta-panel">
					<div class="post-meta-preview__card">
						<p class="eyebrow">inline meta</p>
						<h3>Use right before the tags</h3>
						<div class="post-meta__info">
							<span class="post-meta__entry">
								<span class="post-meta__icon" aria-hidden="true">
									<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<rect x="3" y="4" width="18" height="17" rx="3" />
										<path d="M8 2v4m8-4v4" stroke-linecap="round" />
										<path d="M3 10h18" />
									</svg>
								</span>
								<span class="post-meta__text">12 Jan 2025</span>
							</span>
							<span class="post-meta__entry">
								<span class="post-meta__icon" aria-hidden="true">
									<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<path d="M6 7h12M6 12h12M6 17h7" stroke-linecap="round" />
									</svg>
								</span>
								<span class="post-meta__text">1,200 words</span>
							</span>
							<span class="post-meta__entry">
								<span class="post-meta__icon" aria-hidden="true">
									<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<circle cx="12" cy="12" r="8.5" />
										<path d="M12 8v4l2.25 1.5" stroke-linecap="round" stroke-linejoin="round" />
									</svg>
								</span>
								<span class="post-meta__text">7 min</span>
							</span>
						</div>
						<div class="post-meta-preview__chips">
							<Chip>AppSec</Chip>
							<Chip>Infra</Chip>
							<Chip variant="solid">Release</Chip>
						</div>
					</div>
					<p class="post-meta-preview__note">
						Use <code>.post-meta__text</code> at weight 500 with neon-green icons. Stack the entries on small screens but keep the default gap.
					</p>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="timeline">
				<div class="style-guide__section-head">
					<p class="eyebrow">layout</p>
					<h2>Timeline block</h2>
					<p>Vertical path with neon spine and dots. Use it for career highlights or milestones.</p>
				</div>
				<GlowBox accent="highlight" class="style-guide__panel timeline-panel">
					<Timeline
						items={[
							{ meta: '2024 ‚Äî now', role: 'will bank ¬∑ Security Software Engineer (AppSec & Sec Eng)' },
							{ meta: '2022 ‚Äî 2024', role: 'Globo ¬∑ Security practice for large engineering teams' },
							{ meta: '2017 ‚Äî 2019', role: 'Communities ¬∑ Goroa + Dumont Hackerspace' },
						]}
					/>
					<p class="timeline-note">
						Use <code>&lt;Timeline /&gt;</code> inside GlowBox. The component ships with the neon spine, centered dots, and spacing tuned for the dark theme.
					</p>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="layouts">
				<div class="style-guide__section-head">
					<p class="eyebrow">base blocks</p>
					<h2>GlowBox + Callout</h2>
					<p>
						GlowBox organizes panels and clusters. It hosts callouts, lists, and any editorial content while keeping the soft glow.
					</p>
				</div>
				<div class="layout-grid">
					<GlowBox accent="accent" padding="relaxed" class="layout-card">
						<h3>Relaxed GlowBox</h3>
						<p>
							Use <code>padding="relaxed"</code> for secondary heroes or to spotlight dense blocks such as changelogs. The border always uses the default neon gradient.
						</p>
						<ul>
							<li>Accent: primary highlight.</li>
						<li>Secondary: contrast with purple hues.</li>
						<li>Highlight: mixes blue and purple.</li>
						</ul>
					</GlowBox>
					<GlowBox accent="secondary" padding="snug" class="layout-card">
						<h3>Embedded callouts</h3>
						<p>
							Drop Callout inside GlowBox for notes and alerts. The <code>icon</code> prop takes emoji or inline SVG; <code>variant</code> sets the state.
						</p>
						<Callout title="CTA with icon" variant="danger" icon="üî•">
							<p>Use the <code>danger</code> gradient for in-article CTAs (e.g., mini games). Icon is optional.</p>
						</Callout>
						<Callout title="Default info" variant="info">
							<p>Focuses on neon green with maximum contrast.</p>
						</Callout>
						<Callout title="Success" variant="success">
							<p>Confirmations or feature unlocks.</p>
						</Callout>
						<Callout title="Attention" variant="warning">
							<p>Soft alerts‚Äînever use red.</p>
						</Callout>
					</GlowBox>
				</div>
			</section>

			<section class="style-guide__section" id="utility-buttons">
				<div class="style-guide__section-head">
					<p class="eyebrow">controls</p>
					<h2>Utility buttons</h2>
					<p>The circular GitHub button and the hamburger trigger share the same soft glow and should be reused as-is.</p>
				</div>
				<GlowBox accent="secondary" class="style-guide__panel">
					<div class="utility-grid">
						<div class="utility-card">
							<p class="eyebrow">github</p>
							<div class="utility-card__preview">
								<a href="https://github.com/guisso" class="icon-button" aria-label="GitHub profiles">
									<svg viewBox="0 0 16 16" aria-hidden="true">
										<path
											fill="currentColor"
											d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
										></path>
									</svg>
								</a>
							</div>
							<p class="utility-card__description">
								48√ó48px circle with translucent border, subtle mesh background, and white icon. Hover lifts 2px and swaps the border to neon.
							</p>
						</div>
						<div class="utility-card">
							<p class="eyebrow">hamburger</p>
							<div class="utility-card__preview utility-card__preview--stacked">
								<button type="button" class="utility-hamburger" aria-label="Open mobile menu">
									<span class="utility-hamburger__icon" aria-hidden="true">
										<span></span>
										<span></span>
										<span></span>
									</span>
								</button>
							</div>
							<p class="utility-card__description">
								52px circular button, 1px rgba(255,255,255,0.12) border, and purple/blue radial fill. Lines use a green‚Üíblue gradient.
							</p>
						</div>
					</div>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="cards">
				<div class="style-guide__section-head">
					<p class="eyebrow">cards</p>
					<h2>FeaturedProjectCard in action</h2>
					<p>Neon cards rely on blended background images and uppercase CTAs. Provide title, description, URL, and image‚Äîthat‚Äôs it.</p>
				</div>
				<GlowBox accent="highlight" class="style-guide__panel">
					<ul class="featured-projects__grid featured-projects__grid--showcase">
						{projectSamples.map((project) => (
							<FeaturedProjectCard project={project} />
						))}
					</ul>
				</GlowBox>
			</section>

			<section class="style-guide__section" id="post-cards">
				<div class="style-guide__section-head">
					<p class="eyebrow">posts</p>
					<h2>Blog cards</h2>
