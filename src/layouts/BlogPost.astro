---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Chip from '../components/Chip.astro';
import GlowButton from '../components/GlowButton.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { routes } from '../utils/routes';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags = [] } = Astro.props;
const backToBlogHref = routes.blog();
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="page-shell post-shell">
				<article class="post-article" aria-labelledby="post-title">
					<header class="post-header">
						<p class="eyebrow">Artigo</p>
						<div class="post-meta__timeline" aria-label="Linha do tempo do artigo">
						<div>
							<p class="post-meta__label">Publicado</p>
							<p class="post-meta__value">
								<FormattedDate date={pubDate} />
							</p>
						</div>
						{
							updatedDate && (
								<div>
									<p class="post-meta__label">Atualizado</p>
									<p class="post-meta__value">
										<FormattedDate date={updatedDate} />
									</p>
								</div>
							)
						}
					</div>
					<h1 id="post-title">{title}</h1>
					<p class="post-description text-muted">{description}</p>
					{
						tags.length > 0 && (
							<ul class="post-tags" aria-label="Tags do artigo">
								{tags.map((tag) => (
									<li>
										<Chip>{tag}</Chip>
									</li>
								))}
							</ul>
						)
					}
				</header>

				{
					heroImage && (
						<figure class="post-hero">
							<Image
								width={1200}
								height={600}
								src={heroImage}
								alt={`Imagem destacada para ${title}`}
								loading="lazy"
							/>
						</figure>
					)
				}

				<section class="post-body" aria-label="Conteúdo do artigo">
					<div class="post-flow prose">
						<slot />
					</div>
				</section>

				<footer class="post-footer" aria-label="Navegação complementar">
					<p class="post-footer__label text-muted">
						Continue explorando outros insights ou retorne à lista de artigos.
					</p>
					<nav class="post-footer__actions" aria-label="Ações do artigo">
						<GlowButton href={backToBlogHref} variant="ghost" size="sm">← Voltar para o blog</GlowButton>
					</nav>
				</footer>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.post-shell {
		padding-top: 4rem;
		padding-bottom: 5rem;
	}

	.post-article {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
		width: min(900px, 100%);
		margin: 0 auto;
	}

	.post-header {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		text-align: left;
		padding-bottom: 2.5rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	.post-header::after {
		content: '';
		width: 120px;
		height: 3px;
		border-radius: 999px;
		background: linear-gradient(90deg, #00ff7f, #9a1aff, #6e6eff);
	}

	.post-description {
		font-size: 1.2rem;
		line-height: 1.6;
	}

	.post-meta__timeline {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 0.75rem;
		margin: 0;
		padding: 0;
	}

	.post-meta__timeline div {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.post-meta__label {
		font-size: 0.75rem;
		letter-spacing: 0.18em;
		text-transform: uppercase;
		color: var(--color-muted);
	}

	.post-meta__value {
		margin: 0;
		font-weight: 600;
		color: var(--color-fg);
	}

	.post-tags {
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 0.5rem;
	}

	.post-hero {
		width: min(960px, 100%);
		margin: 0 auto;
	}

	.post-hero img {
		display: block;
		width: 100%;
		height: auto;
		border-radius: var(--border-radius);
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.35);
	}

	.post-body {
		display: flex;
		justify-content: center;
	}

	.post-flow {
		width: min(70ch, 100%);
		margin: 0 auto;
		padding: 0;
	}

	.post-flow :global(> p) {
		margin-bottom: 1.6rem;
	}

	.post-flow :global(pre) {
		margin: 2rem 0;
		padding: 1.25rem;
		background: rgba(6, 6, 9, 0.85);
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: var(--border-radius);
	}

	.post-flow :global(blockquote) {
		border-left-color: var(--color-highlight);
	}

	.post-footer {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		gap: 1.25rem;
		padding-top: 2.5rem;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
	}

	.post-footer__label {
		margin: 0;
		font-weight: 600;
		max-width: 40ch;
	}

	.post-footer__actions {
		display: flex;
		gap: 0.75rem;
	}

	@media (max-width: 720px) {
		.post-shell {
			padding-top: 2.5rem;
		}

		.post-article {
			gap: 2rem;
		}

		.post-header {
			padding-bottom: 1.75rem;
		}

		.post-footer {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
